#!/usr/bin/env ruby

# THIS IS AN EXAMPLE OF A SINGLE FILE APPLICATION

# IT LOADS MUCH FASTER THAN A NORMAL APPLICATION

# ENV["VERBOSE"] = "1"

$VERBOSE = ENV["VERBOSE"]

$APP = "app_global"

require "lizarb"

Lizarb.setup

Lizarb.app do
  mode :code
  system :dev
  system :happy
end

Lizarb.call

class MainCommand < Liza::Command
  def self.call args
    puts "Hello World!"
  end
end

App.call [:main, *ARGV]

Lizarb.exit
