#!/usr/bin/env ruby

# THIS IS AN EXAMPLE OF A SINGLE FILE APPLICATION

# IT LOADS MUCH FASTER THAN A NORMAL APPLICATION

# ENV["VERBOSE"] = "1"

$VERBOSE = ENV["VERBOSE"]

$APP = "app_global"

require "lizarb"

Lizarb.setup

Lizarb.app do
  mode :code
  system :dev
  system :happy
end

Lizarb.call

# DevSystem::DevBox

class DevBox < DevSystem::DevBox
  # Configure your command panel
  # configure :command do
  #   short :i, :irb
  # end
  # Configure your log panel
  configure :log do
    handler :output
  end
end

# DevSystem::Command

class MainCommand < DevSystem::Command
  def self.call args
    puts "Hello World! #{args.inspect}"
    log "Hello World! #{args.inspect}"
  end
end

# App.call

# App.call ARGV
App.call [:main, *ARGV]

Lizarb.exit
